<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.7.2/css/all.css">
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <header>
      <h1>Message Board</h1>
    </header>
    <section>
      <div class="new-message">
        <a href="/new">
          <button class="new-message-btn"> <i class="fa-solid fa-plus"></i> New Message</button>
        </a>
      </div>
      <div class="messages">
        <% for (let i = 0; i < messages.length; i++) { %>
          <div class="message">
            <div class="username">
              <p><%= messages[i].user %></p>
            </div>
            <p><%= messages[i].text %></p>
            <a href="/messages/<%= messages[i].id %>">
              <button class="details" type="button">Details</button>
            </a>
          </div>
        <% } %>
      </div>
    </section>
  </body>
</html>